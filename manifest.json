{
  "manifest_version": 2,
  "name": "ScrollBlocker",
  "version": "1.0",
  "description": "Stops scrolling after a time limit. Solve riddles to unlock or wait.",
  "permissions": ["activeTab", "tabs", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
       "run_at" : "document_idle"
    }
  ]


}